@inherits LayoutComponentBase
<div class="flex flex-col min-h-screen">
    <!-- Top Navigation -->
    <div class="sticky top-0 z-50 bg-gradient-to-r from-oxford-blue to-oxford-blue-dark shadow-lg">
        <NavMenu />
    </div>

    <!-- Mobile Sidebar (when menu is open) -->
    <div class="md:hidden">
        <!-- Sidebar content is handled in NavMenu.razor -->
    </div>

    <!-- Main Content -->
    <main class="flex-1 bg-gray-50">
        <article>
            @Body
        </article>
    </main>
</div>
