@page "/menu"
@using CampusEats.Client.Models
@using CampusEats.Client.Services
@using CampusEats.Client.Components
@using Microsoft.Extensions.Configuration
@inject MenuService MenuService
@inject CategoryService CategoryService
@inject CartService CartService
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IConfiguration Configuration

<PageTitle>Menu - CampusEats</PageTitle>

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-oxford-blue">CampusEats Menu</h1>
        @if (isManager)
        {
            <div class="flex gap-3">
                @if (isReorderMode)
                {
                    <button class="bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-all flex items-center gap-2"
                            @onclick="SaveReorder">
                        <LucideIcon Name="check" Class="w-5 h-5" />
                        Save Order
                    </button>
                    <button class="bg-gray-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-600 transition-all"
                            @onclick="CancelReorder">
                        Cancel
                    </button>
                }
                else
                {
                    @if (!string.IsNullOrEmpty(selectedCategory))
                    {
                        <button class="border-2 border-oxford-blue text-oxford-blue px-6 py-3 rounded-lg font-semibold hover:bg-oxford-blue hover:text-white transition-all flex items-center gap-2"
                                @onclick="StartReorder">
                            <LucideIcon Name="grip-vertical" Class="w-5 h-5" />
                            Edit Order
                        </button>
                    }
                    <button class="bg-oxford-blue text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 hover:shadow-lg transition-all"
                            @onclick="() => OpenMenuItemModal(null)">
                        + Add Menu Item
                    </button>
                }
            </div>
        }
    </div>

    @if (isLoading)
    {
        <div class="text-center py-12">
            <svg class="animate-spin h-16 w-16 mx-auto mb-4 text-oxford-blue" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-gray-600 text-lg">Loading menu...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="bg-red-50 border-2 border-red-200 text-red-700 px-6 py-4 rounded-lg mb-6">
            <strong class="font-semibold">Error:</strong> @error
        </div>
    }
    else
    {
        <!-- Category Tabs -->
        <div class="mb-6 border-b-2 border-tan-light overflow-x-auto">
            <div class="flex gap-2 min-w-max">
                <button class="px-6 py-3 font-semibold transition-all @(selectedCategory == "" ? "border-b-4 border-oxford-blue text-oxford-blue" : "text-gray-600 hover:text-oxford-blue")"
                        @onclick='() => SelectCategory("")'>
                    All Items
                </button>
                @foreach (var category in categories)
                {
                    <button class="px-6 py-3 font-semibold transition-all whitespace-nowrap flex items-center gap-2 @(selectedCategory == category.Name ? "border-b-4 border-oxford-blue text-oxford-blue" : "text-gray-600 hover:text-oxford-blue")"
                            @onclick="() => SelectCategory(category.Name)">
                        <LucideIcon Name="@category.Icon" Class="w-5 h-5" />
                        @category.Name
                    </button>
                }
                @if (isManager)
                {
                    <button class="px-6 py-3 text-gray-400 hover:text-oxford-blue transition-colors"
                            @onclick="OpenCategoryModal">
                        + Manage Categories
                    </button>
                }
            </div>
        </div>

        <!-- Advanced Filters -->
        <div class="mb-6">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">

                <!-- Toggle -->
                <button class="w-full flex items-center justify-between px-5 py-3 hover:bg-gray-50 transition-colors"
                        @onclick="() => showFilters = !showFilters">
                    <span class="text-sm font-semibold text-gray-800">Advanced Filters</span>
                    <span class="text-xs text-gray-500 transition-transform duration-200
                                @(showFilters ? "rotate-180" : "")">▼</span>
                </button>

                @if (showFilters)
                {
                    <div class="border-t border-gray-200 bg-gray-50/30 px-5 py-4">

                        <!-- FIXED GRID -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

                            <!-- Search -->
                            <div class="flex flex-col">
                                <label class="text-xs font-medium text-gray-700 mb-1.5">Search</label>
                                <input type="text"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md
                                            focus:border-oxford-blue focus:ring-oxford-blue/20 focus:ring-1"
                                    placeholder="Search menu items..."
                                    @bind="searchKeyword"
                                    @bind:event="oninput"
                                    @onkeyup="OnSearchInput" />
                            </div>

                            <!-- Dietary Restrictions -->
                            <div class="flex flex-col">
                                <label class="text-xs font-medium text-gray-700 mb-1.5">Dietary Restrictions</label>
                                <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md
                                            focus:border-oxford-blue focus:ring-oxford-blue/20 focus:ring-1"
                                        @bind="selectedDietaryTag"
                                        @bind:after="ApplyFilters">
                                    <option value="">All Items</option>
                                    @foreach (var tag in dietaryTags)
                                    {
                                        <option value="@tag">@tag</option>
                                    }
                                </select>
                            </div>

                            <!-- Clear Button (now correct size & aligned) -->
                            <div class="flex flex-col justify-end">
                                <button class="w-full px-4 py-2 text-sm font-medium rounded-md bg-oxford-blue text-white hover:bg-oxford-blue-dark transition"
                                        @onclick="ClearFilters">
                                    Clear Filters
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


        <!-- Reorder Mode Notice -->
        @if (isReorderMode)
        {
            <div class="bg-amber-50 border border-amber-200 text-amber-800 px-4 py-3 rounded-lg mb-6 flex items-center gap-3">
                <LucideIcon Name="grip-vertical" Class="w-5 h-5" />
                <span class="font-medium">Drag items to reorder them. Click "Save Order" when done.</span>
            </div>
        }

        <!-- Menu Items - Reorder Mode (List View) -->
        @if (isReorderMode)
        {
            <DragDropList TItem="MenuItemResponse" @bind-Items="reorderItems" OnOrderChanged="OnReorderChanged">
                <ItemTemplate Context="item">
                    <div class="flex items-center gap-4 w-full">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@GetImageUrl(item.ImagePath)" class="w-16 h-16 object-cover rounded-lg flex-shrink-0" alt="@item.Name">
                        }
                        else
                        {
                            <div class="w-16 h-16 bg-tan-light rounded-lg flex items-center justify-center flex-shrink-0">
                                <span class="text-gray-400 text-xs">No img</span>
                            </div>
                        }
                        <div class="flex-1 min-w-0">
                            <h5 class="font-bold text-oxford-blue truncate">@item.Name</h5>
                            <p class="text-tan-dark text-sm">@item.Category</p>
                        </div>
                        <span class="text-xl font-bold text-oxford-blue flex-shrink-0">@item.Price.ToString("C")</span>
                    </div>
                </ItemTemplate>
            </DragDropList>
        }
        else
        {
            <!-- Menu Items Grid (Normal Mode) -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var item in filteredItems)
                {
                    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden border border-tan-light relative">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@GetImageUrl(item.ImagePath)" class="w-full h-48 object-cover" alt="@item.Name">
                        }
                        else
                        {
                            <div class="w-full h-48 bg-tan-light flex items-center justify-center">
                                <span class="text-gray-400 text-lg">No image</span>
                            </div>
                        }

                        <div class="p-6">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex-1">
                                    <h5 class="text-xl font-bold text-oxford-blue mb-1">@item.Name</h5>
                                    <p class="text-tan-dark text-sm font-medium mb-2">@item.Category</p>
                                </div>
                                @if (isManager)
                                {
                                    <div class="flex items-center gap-3 ml-2">
                                        <button class="inline-flex items-center px-4 py-1.5 text-sm font-semibold rounded-full border border-oxford-blue/30 text-oxford-blue bg-oxford-blue/5 hover:bg-oxford-blue/10 shadow-sm"
                                                @onclick="() => OpenMenuItemModal(item)"
                                                title="Edit">
                                            Edit
                                        </button>
                                        <button class="inline-flex items-center px-4 py-1.5 text-sm font-semibold rounded-full border border-red-300 text-red-700 bg-red-50 hover:bg-red-100 shadow-sm"
                                                @onclick="() => OpenDeleteDialog(item)"
                                                title="Delete">
                                            Delete
                                        </button>
                                    </div>
                                }
                            </div>

                            @if (item.DietaryTags != null && item.DietaryTags.Any())
                            {
                                <div class="flex flex-wrap gap-1 mb-3">
                                    @foreach (var tag in item.DietaryTags)
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full font-medium">
                                            @tag.Name
                                        </span>
                                    }
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-gray-600 mb-4 line-clamp-2">@item.Description</p>
                            }

                            <div class="flex justify-between items-center mt-4">
                                <span class="text-3xl font-bold text-oxford-blue">@item.Price.ToString("C")</span>
                                <button class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors shadow-md hover:shadow-lg"
                                        @onclick="() => AddToCart(item)">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @if (!filteredItems.Any())
        {
            <div class="bg-blue-50 border-2 border-blue-200 text-blue-700 px-6 py-4 rounded-lg text-center">
                No menu items found. Try different filters.
            </div>
        }
    }
</div>

<!-- Floating Action Button (Mobile) -->
@if (isManager && !isLoading)
{
    <button class="md:hidden fixed bottom-6 right-6 w-14 h-14 bg-oxford-blue text-white rounded-full shadow-lg hover:shadow-xl transition-all flex items-center justify-center text-2xl"
            @onclick="() => OpenMenuItemModal(null)">
        +
    </button>
}

<!-- Modals -->
<MenuItemModal @ref="menuItemModal" OnSaved="OnMenuItemSaved" />
<DeleteConfirmDialog @ref="deleteDialog" OnDeleted="OnMenuItemDeleted" />
<CategoryManagementModal @ref="categoryModal" OnChanged="OnCategoriesChanged" />

@code {
    private List<MenuItemResponse> menuItems = new();
    private List<MenuItemResponse> filteredItems = new();
    private List<CategoryResponse> categories = new();
    private List<string> dietaryTags = new();
    private bool isLoading = true;
    private bool showFilters = false;
    private bool isManager = false;
    private string? error;
    private string searchKeyword = "";
    private string selectedCategory = "";
    private string selectedDietaryTag = "";

    // Reorder mode
    private bool isReorderMode = false;
    private List<MenuItemResponse> reorderItems = new();

    // Modal references
    private MenuItemModal menuItemModal = default!;
    private DeleteConfirmDialog deleteDialog = default!;
    private CategoryManagementModal categoryModal = default!;

    protected override async Task OnInitializedAsync()
    {
        await CheckManagerRole();
        await LoadCategories();
        await LoadMenu();
    }

    private async Task CheckManagerRole()
    {
        var role = await AuthService.GetUserRoleAsync();
        isManager = role == "Manager" || role == "Admin";
    }

    private async Task LoadCategories()
    {
        try
        {
            var allCategories = await CategoryService.GetCategoriesAsync();

            // Only show categories that have menu items
            var categoriesWithItems = new List<CategoryResponse>();
            foreach (var category in allCategories)
            {
                var itemsInCategory = menuItems.Count == 0 || menuItems.Any(i => i.Category == category.Name);

                if (itemsInCategory || isManager)
                {
                    categoriesWithItems.Add(category);
                }
            }

            categories = categoriesWithItems;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load categories: {ex.Message}");
            categories = new List<CategoryResponse>();
        }
    }

    private async Task LoadMenu()
    {
        try
        {
            isLoading = true;
            error = null;

            menuItems = await MenuService.GetMenuAsync();

            // Extract unique dietary tags from the list
            dietaryTags = menuItems
                .Where(i => i.DietaryTags != null && i.DietaryTags.Any())
                .SelectMany(i => i.DietaryTags.Select(t => t.Name))
                .Distinct()
                .OrderBy(t => t)
                .ToList();

            // Reload categories to filter empty ones
            await LoadCategories();

            ApplyFiltersLocal();
        }
        catch (Exception ex)
        {
            error = $"Failed to load menu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectCategory(string category)
    {
        selectedCategory = category;
        ApplyFiltersLocal();
    }

    private void OnSearchInput()
    {
        ApplyFiltersLocal();
    }

    private void ApplyFilters()
    {
        ApplyFiltersLocal();
    }

    private void ApplyFiltersLocal()
    {
        filteredItems = menuItems;

        // Filter by category
        if (!string.IsNullOrEmpty(selectedCategory))
        {
            filteredItems = filteredItems.Where(i => i.Category == selectedCategory).ToList();
        }

        // Filter by search keyword
        if (!string.IsNullOrEmpty(searchKeyword))
        {
            filteredItems = filteredItems.Where(i =>
                i.Name.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase) ||
                (i.Description != null && i.Description.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase))
            ).ToList();
        }

        // Filter by dietary tag
        if (!string.IsNullOrEmpty(selectedDietaryTag))
        {
            filteredItems = filteredItems.Where(i =>
                i.DietaryTags != null && i.DietaryTags.Any(t => t.Name.Equals(selectedDietaryTag, StringComparison.OrdinalIgnoreCase))
            ).ToList();
        }

        // Sort by SortOrder only when a specific category is selected
        // For "All Items" view, preserve API ordering (Category.SortOrder → MenuItem.SortOrder)
        if (!string.IsNullOrEmpty(selectedCategory))
        {
            filteredItems = filteredItems
                .OrderBy(i => i.SortOrder)
                .ThenBy(i => i.Name)
                .ToList();
        }

        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchKeyword = "";
        selectedCategory = "";
        selectedDietaryTag = "";
        ApplyFiltersLocal();
    }

    private async Task AddToCart(MenuItemResponse item)
    {
        await CartService.AddItemAsync(item);
    }

    private string GetImageUrl(string? imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return "";

        // If it's already a full URL, return it
        if (imagePath.StartsWith("http"))
            return imagePath;

        // Otherwise, prepend the API base URL from configuration
        var apiBaseUrl = Configuration["ApiSettings:BaseUrl"] ?? "";
        return $"{apiBaseUrl}{imagePath}";
    }

    private async Task OpenMenuItemModal(MenuItemResponse? item)
    {
        await menuItemModal.OpenAsync(item);
    }

    private void OpenDeleteDialog(MenuItemResponse item)
    {
        deleteDialog.Open(item);
    }

    private async Task OpenCategoryModal()
    {
        await categoryModal.OpenAsync();
    }

    private async Task OnMenuItemSaved()
    {
        await LoadMenu();
    }

    private async Task OnMenuItemDeleted()
    {
        await LoadMenu();
    }

    private async Task OnCategoriesChanged()
    {
        // Reload both categories and menu items to reflect new category order
        await LoadMenu();
    }

    // Reorder mode methods
    private void StartReorder()
    {
        reorderItems = filteredItems.ToList();
        isReorderMode = true;
    }

    private void CancelReorder()
    {
        isReorderMode = false;
        reorderItems.Clear();
    }

    private void OnReorderChanged()
    {
        // Callback for when items are reordered - can be used for visual feedback if needed
    }

    private async Task SaveReorder()
    {
        try
        {
            var orderedIds = reorderItems.Select(i => i.MenuItemId).ToList();
            await MenuService.ReorderMenuItemsAsync(orderedIds);

            await LoadMenu();
            isReorderMode = false;
            reorderItems.Clear();
        }
        catch (Exception ex)
        {
            error = $"Failed to save order: {ex.Message}";
        }
    }
}