@page "/menu"
@using CampusEats.Client.Models
@using CampusEats.Client.Services
@inject MenuService MenuService
@inject CartService CartService
@inject NavigationManager Navigation

<PageTitle>Menu - CampusEats</PageTitle>

<div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-oxford-blue mb-8">üçΩÔ∏è CampusEats Menu</h1>

    @if (isLoading)
    {
        <div class="text-center py-12">
            <div class="inline-block animate-spin text-6xl mb-4">‚è≥</div>
            <p class="text-gray-600 text-lg">Loading menu...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="bg-red-50 border-2 border-red-200 text-red-700 px-6 py-4 rounded-lg mb-6">
            <strong class="font-semibold">Error:</strong> @error
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div>
                <input type="text"
                       class="w-full px-4 py-3 border-2 border-tan-light rounded-lg focus:border-oxford-blue focus:outline-none focus:ring-2 focus:ring-oxford-blue/15 transition-all"
                       placeholder="Search dietary keywords..."
                       @bind="searchKeyword"
                       @bind:event="oninput" />
            </div>
            <div>
                <select class="w-full px-4 py-3 border-2 border-tan-light rounded-lg focus:border-oxford-blue focus:outline-none focus:ring-2 focus:ring-oxford-blue/15 transition-all bg-white"
                        @bind="selectedCategory">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="flex gap-2">
                <button class="flex-1 bg-oxford-blue text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 hover:shadow-lg hover:shadow-oxford-blue/40 transition-all"
                        @onclick="LoadMenu">
                    Filter
                </button>
                <button class="flex-1 bg-tan text-oxford-blue px-6 py-3 rounded-lg font-semibold hover:bg-tan-dark hover:text-white hover:-translate-y-0.5 hover:shadow-lg transition-all"
                        @onclick="ClearFilters">
                    Clear
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var item in menuItems)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden border border-tan-light">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="w-full h-48 object-cover" alt="@item.Name">
                    }
                    else
                    {
                        <div class="w-full h-48 bg-tan-light flex items-center justify-center">
                            <span class="text-gray-400 text-lg">No image</span>
                        </div>
                    }
                    <div class="p-6">
                        <h5 class="text-xl font-bold text-oxford-blue mb-1">@item.Name</h5>
                        <p class="text-tan-dark text-sm font-medium mb-3">@item.Category</p>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="text-gray-600 mb-4 line-clamp-2">@item.Description</p>
                        }
                        <div class="flex justify-between items-center mt-4">
                            <span class="text-3xl font-bold text-oxford-blue">@item.Price.ToString("C")</span>
                            <button class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors shadow-md hover:shadow-lg"
                                    @onclick="() => AddToCart(item)">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!menuItems.Any())
        {
            <div class="bg-blue-50 border-2 border-blue-200 text-blue-700 px-6 py-4 rounded-lg text-center">
                No menu items found. Try different filters.
            </div>
        }
    }
</div>

@code {
    private List<MenuItemResponse> menuItems = new();
    private List<string> categories = new();
    private bool isLoading = true;
    private string? error;
    private string searchKeyword = "";
    private string selectedCategory = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadMenu();
    }

    private async Task LoadMenu()
    {
        try
        {
            isLoading = true;
            error = null;

            var allItems = await MenuService.GetMenuAsync(
                string.IsNullOrEmpty(selectedCategory) ? null : selectedCategory,
                string.IsNullOrEmpty(searchKeyword) ? null : searchKeyword
            );

            menuItems = allItems;

            // Extract unique categories
            categories = allItems
                .Select(i => i.Category)
                .Distinct()
                .OrderBy(c => c)
                .ToList();
        }
        catch (Exception ex)
        {
            error = $"Failed to load menu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ClearFilters()
    {
        searchKeyword = "";
        selectedCategory = "";
        await LoadMenu();
    }

    private void AddToCart(MenuItemResponse item)
    {
        CartService.AddItem(item);
    }
}