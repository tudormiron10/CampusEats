@page "/orders"
@using CampusEats.Client.Models
@using CampusEats.Client.Services
@using Blazored.LocalStorage
@inject OrderService OrderService
@inject OrderHubService OrderHubService
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>My Orders - CampusEats</PageTitle>

<!-- Hidden audio element for order status change notification -->
<audio id="statusChangeSound" preload="auto">
    <source src="/sounds/notification.mp3" type="audio/mpeg" />
</audio>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-2">
                <div class="p-2 bg-oxford-blue rounded-xl">
                    <svg class="w-8 h-8 text-tan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-slate-800">My Orders</h1>
                    <p class="text-slate-500">Track and manage your orders</p>
                </div>
            </div>
        </div>

        <!-- Stats Summary -->
        @if (!isLoading && error == null && orders.Any())
        {
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                <div class="bg-white rounded-xl p-4 shadow-sm border border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-slate-100 rounded-lg">
                            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-slate-800">@orders.Count</p>
                            <p class="text-xs text-slate-500 uppercase tracking-wide">Total Orders</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-amber-100 rounded-lg">
                            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-slate-800">@orders.Count(o => o.Status == "Pending" || o.Status == "InPreparation")</p>
                            <p class="text-xs text-slate-500 uppercase tracking-wide">In Progress</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-emerald-100 rounded-lg">
                            <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-slate-800">@orders.Count(o => o.Status == "Ready")</p>
                            <p class="text-xs text-slate-500 uppercase tracking-wide">Ready</p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-slate-100 rounded-lg">
                            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-2xl font-bold text-slate-800">@orders.Count(o => o.Status == "Completed")</p>
                            <p class="text-xs text-slate-500 uppercase tracking-wide">Completed</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (isLoading)
        {
            <div class="flex flex-col items-center justify-center py-16">
                <div class="relative">
                    <div class="w-16 h-16 border-4 border-slate-200 rounded-full"></div>
                    <div class="w-16 h-16 border-4 border-oxford-blue border-t-transparent rounded-full animate-spin absolute top-0 left-0"></div>
                </div>
                <p class="mt-4 text-slate-500 font-medium">Loading your orders...</p>
            </div>
        }
        else if (error != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-xl p-6 flex items-start gap-4">
                <div class="p-2 bg-red-100 rounded-lg shrink-0">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-red-800">Error loading orders</h3>
                    <p class="text-red-600 text-sm mt-1">@error</p>
                </div>
            </div>
        }
        else if (!orders.Any())
        {
            <div class="bg-white rounded-xl border border-slate-200 p-12 text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-700 mb-2">No orders yet</h3>
                <p class="text-slate-500 mb-6">You haven't placed any orders. Start exploring our delicious menu!</p>
                <a href="/menu" class="inline-flex items-center gap-2 bg-gradient-to-r from-oxford-blue to-oxford-blue-light text-white px-6 py-3 rounded-xl font-semibold hover:shadow-lg hover:shadow-oxford-blue/25 transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Browse Menu
                </a>
            </div>
        }
        else
        {
            <div class="space-y-4">
                @foreach (var order in orders.OrderByDescending(o => o.OrderDate))
                {
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-md transition-shadow duration-200 @(order.Status == "Cancelled" ? "opacity-60" : "")">
                        <!-- Order Header -->
                        <div class="@GetStatusHeaderClass(order.Status) px-6 py-4 cursor-pointer" @onclick="() => ToggleOrderDetails(order.OrderId)">
                            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                                <div class="flex items-center gap-4">
                                    <div class="@GetStatusIconBgClass(order.Status) p-3 rounded-xl">
                                        @((MarkupString)GetStatusIcon(order.Status))
                                    </div>
                                    <div>
                                        <div class="flex items-center gap-3 flex-wrap">
                                            <h3 class="text-xl font-bold text-slate-800">Order #@GetOrderNumber(order.OrderId)</h3>
                                            <span class="@GetStatusBadgeClass(order.Status) px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wide">
                                                @FormatStatus(order.Status)
                                            </span>
                                        </div>
                                        <div class="flex items-center gap-2 mt-1 text-slate-500 text-sm">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            @order.OrderDate.ToLocalTime().ToString("MMM dd, yyyy 'at' HH:mm")
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <div class="text-right">
                                        <p class="text-xs text-slate-500 uppercase tracking-wide">Total</p>
                                        <p class="text-2xl font-bold text-slate-800">@order.TotalAmount.ToString("C")</p>
                                    </div>
                                    @if (order.Status == "Pending" && order.TotalAmount > 0)
                                    {
                                        <a href="/checkout/@order.OrderId" 
                                           class="bg-gradient-to-r from-emerald-500 to-green-500 hover:from-emerald-600 hover:to-green-600 text-white px-5 py-2.5 rounded-xl font-semibold transition-all duration-200 shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 flex items-center gap-2"
                                           @onclick:stopPropagation="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                                            </svg>
                                            <span>Pay Now</span>
                                        </a>
                                    }
                                    @if (CanCancelOrder(order.Status))
                                    {
                                        <button class="bg-gradient-to-r from-red-500 to-rose-500 hover:from-red-600 hover:to-rose-600 text-white px-5 py-2.5 rounded-xl font-semibold transition-all duration-200 shadow-lg shadow-red-500/25 hover:shadow-red-500/40 disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
                                                @onclick="() => CancelOrder(order.OrderId)"
                                                @onclick:stopPropagation="true"
                                                disabled="@(cancellingOrderId == order.OrderId)">
                                            @if (cancellingOrderId == order.OrderId)
                                            {
                                                <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
                                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                                </svg>
                                                <span>Cancelling...</span>
                                            }
                                            else
                                            {
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                </svg>
                                                <span>Cancel</span>
                                            }
                                        </button>
                                    }
                                    <div class="text-slate-400 transition-transform duration-200 @(expandedOrders.Contains(order.OrderId) ? "rotate-180" : "")">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Items (Expandable) -->
                        @if (expandedOrders.Contains(order.OrderId))
                        {
                            <div class="px-6 py-4 bg-slate-50/50 border-t border-slate-100">
                                @if (orderDetails.ContainsKey(order.OrderId) && orderDetails[order.OrderId] != null)
                                {
                                    var details = orderDetails[order.OrderId];
                                    <div class="flex items-center gap-2 mb-3">
                                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                        </svg>
                                        <h4 class="font-semibold text-slate-700 text-sm uppercase tracking-wide">Order Items</h4>
                                        <span class="text-xs text-slate-400">(@details!.Items.Count @(details.Items.Count == 1 ? "item" : "items"))</span>
                                    </div>
                                    <div class="grid gap-2">
                                        @foreach (var item in details.Items)
                                        {
                                            <div class="flex items-center justify-between bg-white rounded-lg px-4 py-3 border border-slate-100">
                                                <div class="flex items-center gap-3">
                                                    <span class="w-8 h-8 bg-oxford-blue/10 text-oxford-blue rounded-lg flex items-center justify-center font-bold text-sm">
                                                        @item.Quantity
                                                    </span>
                                                    <span class="font-medium text-slate-700">@item.Name</span>
                                                </div>
                                                <span class="font-semibold text-slate-800">@((item.UnitPrice * item.Quantity).ToString("C"))</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="flex items-center justify-center py-6 gap-3">
                                        <div class="w-5 h-5 border-2 border-slate-300 border-t-oxford-blue rounded-full animate-spin"></div>
                                        <span class="text-slate-500">Loading order details...</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<SimpleOrderResponse> orders = new();
    private Dictionary<Guid, OrderResponse?> orderDetails = new();
    private HashSet<Guid> expandedOrders = new();
    private bool isLoading = true;
    private string? error;
    private Guid? cancellingOrderId;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to SignalR events for real-time status updates
        OrderHubService.OnOrderStatusChanged += HandleOrderStatusChanged;
        OrderHubService.OnReconnected += HandleReconnected;

        // Start SignalR connection with token provider delegate
        try
        {
            await OrderHubService.StartAsync(async () => await LocalStorage.GetItemAsync<string>("authToken"));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SignalR connection failed: {ex.Message}");
            // Continue anyway - page will still work with manual refresh
        }

        await LoadOrders();
    }

    private async void HandleOrderStatusChanged(OrderStatusUpdate update)
    {
        try
        {
            // Find and update the order in our local list
            var index = orders.FindIndex(o => o.OrderId == update.OrderId);
            if (index >= 0)
            {
                var existing = orders[index];
                orders[index] = existing with { Status = update.Status };
                await InvokeAsync(StateHasChanged);

                // Play notification sound for status change
                try
                {
                    await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('statusChangeSound').play().catch(() => {})");
                }
                catch
                {
                    // Ignore audio playback errors
                }
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error handling order status change: {ex.Message}");
        }
    }

    private async void HandleReconnected()
    {
        try
        {
            // Refresh orders after reconnection to catch any missed updates
            await InvokeAsync(async () => await LoadOrders());
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error refreshing orders after reconnection: {ex.Message}");
        }
    }

    public ValueTask DisposeAsync()
    {
        // Unsubscribe from SignalR events
        OrderHubService.OnOrderStatusChanged -= HandleOrderStatusChanged;
        OrderHubService.OnReconnected -= HandleReconnected;
        return ValueTask.CompletedTask;
    }

    private async Task LoadOrders()
    {
        try
        {
            isLoading = true;
            error = null;
            orders = await OrderService.GetOrdersAsync();
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            error = $"Failed to load orders: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ToggleOrderDetails(Guid orderId)
    {
        if (expandedOrders.Contains(orderId))
        {
            expandedOrders.Remove(orderId);
        }
        else
        {
            expandedOrders.Add(orderId);
            if (!orderDetails.ContainsKey(orderId))
            {
                try
                {
                    var details = await OrderService.GetOrderByIdAsync(orderId);
                    orderDetails[orderId] = details;
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Failed to load order details: {ex.Message}");
                }
            }
        }
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-amber-100 text-amber-700 border border-amber-200",
        "InPreparation" => "bg-blue-100 text-blue-700 border border-blue-200",
        "Ready" => "bg-emerald-100 text-emerald-700 border border-emerald-200",
        "Completed" => "bg-slate-100 text-slate-600 border border-slate-200",
        "Cancelled" => "bg-red-100 text-red-700 border border-red-200",
        _ => "bg-slate-100 text-slate-600 border border-slate-200"
    };

    private string GetStatusHeaderClass(string status) => status switch
    {
        "Pending" => "bg-gradient-to-r from-amber-50 to-orange-50 border-b border-amber-100",
        "InPreparation" => "bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-blue-100",
        "Ready" => "bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-emerald-100",
        "Completed" => "bg-slate-50 border-b border-slate-100",
        "Cancelled" => "bg-gradient-to-r from-red-50 to-rose-50 border-b border-red-100",
        _ => "bg-slate-50 border-b border-slate-100"
    };

    private string GetStatusIconBgClass(string status) => status switch
    {
        "Pending" => "bg-amber-100",
        "InPreparation" => "bg-blue-100",
        "Ready" => "bg-emerald-100",
        "Completed" => "bg-slate-200",
        "Cancelled" => "bg-red-100",
        _ => "bg-slate-200"
    };

    private string GetStatusIcon(string status) => status switch
    {
        "Pending" => "<svg class=\"w-6 h-6 text-amber-600\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z\"></path></svg>",
        "InPreparation" => "<svg class=\"w-6 h-6 text-blue-600\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z\"></path></svg>",
        "Ready" => "<svg class=\"w-6 h-6 text-emerald-600\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z\"></path></svg>",
        "Completed" => "<svg class=\"w-6 h-6 text-slate-500\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M5 13l4 4L19 7\"></path></svg>",
        "Cancelled" => "<svg class=\"w-6 h-6 text-red-500\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M6 18L18 6M6 6l12 12\"></path></svg>",
        _ => "<svg class=\"w-6 h-6 text-slate-500\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z\"></path></svg>"
    };

    // Use bitwise AND instead of Math.Abs to avoid overflow when GetHashCode returns int.MinValue
    private string GetOrderNumber(Guid orderId) => ((orderId.GetHashCode() & 0x7FFFFFFF) % 1000000).ToString("D6");

    private string FormatStatus(string status) => System.Text.RegularExpressions.Regex.Replace(status, "([a-z])([A-Z])", "$1 $2");

    private bool CanCancelOrder(string status) => status == "Pending";

    private async Task CancelOrder(Guid orderId)
    {
        try
        {
            cancellingOrderId = orderId;
            await OrderService.CancelOrderAsync(orderId);
            await LoadOrders();
        }
        catch (Exception ex)
        {
            error = $"Failed to cancel order: {ex.Message}";
        }
        finally
        {
            cancellingOrderId = null;
        }
    }

}