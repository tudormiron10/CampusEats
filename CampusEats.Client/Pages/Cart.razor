@page "/cart"
@using CampusEats.Client.Services
@using CampusEats.Client.Models
@inject CartService CartService
@inject OrderService OrderService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Shopping Cart - CampusEats</PageTitle>

<div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-oxford-blue mb-8">üõí Shopping Cart</h1>

    @if (!CartService.Items.Any())
    {
        <div class="bg-blue-50 border-2 border-blue-200 text-blue-700 px-6 py-4 rounded-lg">
            <p class="mb-4">Your cart is empty.</p>
            <a href="/menu" class="inline-block bg-oxford-blue text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 hover:shadow-lg hover:shadow-oxford-blue/40 transition-all">
                Browse Menu
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 space-y-4">
                @foreach (var item in CartService.Items)
                {
                    <div class="bg-white rounded-lg shadow-md border border-tan-light p-6">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center">
                            <div>
                                <h5 class="text-xl font-bold text-oxford-blue mb-1">@item.Name</h5>
                                <p class="text-gray-600">@item.Price.ToString("C") each</p>
                            </div>
                            <div class="flex items-center justify-center gap-3">
                                <button class="w-10 h-10 flex items-center justify-center bg-tan hover:bg-tan-dark text-oxford-blue hover:text-white rounded-lg font-bold transition-all"
                                        @onclick="() => UpdateQuantity(item, -1)">
                                    -
                                </button>
                                <input type="number"
                                       class="w-16 px-3 py-2 text-center border-2 border-tan-light rounded-lg font-semibold text-oxford-blue"
                                       value="@item.Quantity"
                                       readonly />
                                <button class="w-10 h-10 flex items-center justify-center bg-tan hover:bg-tan-dark text-oxford-blue hover:text-white rounded-lg font-bold transition-all"
                                        @onclick="() => UpdateQuantity(item, 1)">
                                    +
                                </button>
                            </div>
                            <div class="flex items-center justify-between md:justify-end gap-4">
                                <span class="text-2xl font-bold text-oxford-blue">@((item.Price * item.Quantity).ToString("C"))</span>
                                <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors"
                                        @onclick="() => RemoveItem(item)">
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-md border border-tan-light p-6 sticky top-4">
                    <h5 class="text-2xl font-bold text-oxford-blue mb-4">Order Summary</h5>
                    <div class="border-t-2 border-tan-light pt-4 mb-4">
                        <div class="flex justify-between items-center mb-2 text-gray-700">
                            <span>Items:</span>
                            <span class="font-semibold">@CartService.TotalItems</span>
                        </div>
                        <div class="flex justify-between items-center mb-4 text-oxford-blue">
                            <strong class="text-lg">Total:</strong>
                            <strong class="text-2xl">@CartService.TotalAmount.ToString("C")</strong>
                        </div>
                    </div>
                    <button class="w-full bg-oxford-blue text-white px-6 py-3 rounded-lg font-semibold hover:-translate-y-0.5 hover:shadow-lg hover:shadow-oxford-blue/40 transition-all disabled:opacity-50 disabled:cursor-not-allowed mb-3"
                            @onclick="PlaceOrder"
                            disabled="@isPlacingOrder">
                        @if (isPlacingOrder)
                        {
                            <span class="inline-block animate-spin mr-2">‚è≥</span>
                            <span>Placing Order...</span>
                        }
                        else
                        {
                            <span>Place Order</span>
                        }
                    </button>
                    <button class="w-full bg-tan text-oxford-blue px-6 py-3 rounded-lg font-semibold hover:bg-tan-dark hover:text-white hover:-translate-y-0.5 hover:shadow-lg transition-all"
                            @onclick="ClearCart">
                        Clear Cart
                    </button>

                    @if (orderError != null)
                    {
                        <div class="bg-red-50 border-2 border-red-200 text-red-700 px-4 py-3 rounded-lg mt-4">
                            @orderError
                        </div>
                    }

                    @if (orderSuccess)
                    {
                        <div class="bg-green-50 border-2 border-green-200 text-green-700 px-4 py-3 rounded-lg mt-4">
                            Order placed successfully!
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool isPlacingOrder = false;
    private string? orderError;
    private bool orderSuccess = false;

    // Hardcoded user ID for now (from your seeder - admin user)
    private readonly Guid userId = Guid.Parse("a0000000-0000-0000-0000-000000000001");

    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private void UpdateQuantity(CartItem item, int delta)
    {
        var newQuantity = item.Quantity + delta;
        if (newQuantity > 0)
        {
            CartService.UpdateQuantity(item.MenuItemId, newQuantity);
        }
    }

    private void RemoveItem(CartItem item)
    {
        CartService.RemoveItem(item.MenuItemId);
    }

    private void ClearCart()
    {
        CartService.Clear();
    }

    private async Task PlaceOrder()
    {
        try
        {
            isPlacingOrder = true;
            orderError = null;
            orderSuccess = false;

            var menuItemIds = CartService.GetMenuItemIds();
            var request = new CreateOrderRequest(userId, menuItemIds);

            var order = await OrderService.CreateOrderAsync(request);

            if (order != null)
            {
                orderSuccess = true;
                CartService.Clear();

                // Navigate to orders page after a short delay
                await Task.Delay(1500);
                Navigation.NavigateTo("/orders");
            }
        }
        catch (Exception ex)
        {
            orderError = $"Failed to place order: {ex.Message}";
        }
        finally
        {
            isPlacingOrder = false;
        }
    }
}