    // Analytics State
    private AnalyticsResponse? analytics;
    private bool analyticsLoading = false;
    private string? analyticsError;
    private string analyticsViewMode = "day"; // day, week, month, year
    private DateTime analyticsStartDate = DateTime.Today;
    private DateTime analyticsEndDate = DateTime.Today.AddDays(1);
    private string quickPeriod = "today";

    private async Task SetAnalyticsSection()
    {
        activeSection = "analytics";
        if (analytics == null)
        {
            await LoadAnalytics();
        }
    }

    private bool shouldRenderCharts = false;

    private async Task LoadAnalytics()
    {
        try
        {
            analyticsLoading = true;
            analyticsError = null;
            shouldRenderCharts = false;
            StateHasChanged();

            var groupBy = analyticsViewMode switch
            {
                "day" => "hour",
                "week" => "day",
                "month" => "day",
                "year" => "month",
                _ => "hour"
            };

            analytics = await KitchenService.GetAnalyticsAsync(analyticsStartDate, analyticsEndDate, groupBy);
            shouldRenderCharts = true;
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            Navigation.NavigateTo("/login");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Forbidden)
        {
            Navigation.NavigateTo("/menu");
        }
        catch (Exception ex)
        {
            analyticsError = $"Failed to load analytics: {ex.Message}";
        }
        finally
        {
            analyticsLoading = false;
            StateHasChanged();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (shouldRenderCharts && analytics != null)
        {
            shouldRenderCharts = false;
            await RenderCharts();
        }
    }

    private async Task RenderCharts()
    {
        if (analytics == null) return;

        try
        {
            // Main chart - Orders & Revenue
            var categories = analytics.TimeSeries.Select(t => FormatTimeSeriesLabel(t.Period)).ToArray();
            var orderData = analytics.TimeSeries.Select(t => t.OrderCount).ToArray();
            var revenueData = analytics.TimeSeries.Select(t => (double)t.Revenue).ToArray();

            await JSRuntime.InvokeVoidAsync("apexChartsInterop.renderRevenueChart",
                "mainChart", categories, orderData, revenueData);

            // Revenue sparkline
            var sparklineData = analytics.Revenue.RevenueByHour.Select(r => (double)r.Revenue).ToArray();
            await JSRuntime.InvokeVoidAsync("apexChartsInterop.renderSparkline",
                "revenueSparkline", sparklineData, "#10b981");

            // Category donut chart
            if (analytics.Revenue.CategoryBreakdown.Any())
            {
                var categoryLabels = analytics.Revenue.CategoryBreakdown.Select(c => c.CategoryName).ToArray();
                var categoryData = analytics.Revenue.CategoryBreakdown.Select(c => (double)c.Revenue).ToArray();
                await JSRuntime.InvokeVoidAsync("apexChartsInterop.renderDonutChart",
                    "categoryDonut", categoryLabels, categoryData, (string[]?)null);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Chart render error: {ex.Message}");
        }
    }

    private string FormatTimeSeriesLabel(DateTime period)
    {
        return analyticsViewMode switch
        {
            "day" => period.ToString("HH:00"),
            "week" => period.ToString("ddd"),
            "month" => period.ToString("MMM d"),
            "year" => period.ToString("MMM"),
            _ => period.ToString("HH:00")
        };
    }

    private bool IsQuickButtonActive(string period) => quickPeriod == period;

    private async Task SetQuickPeriod(string period)
    {
        quickPeriod = period;
        var today = DateTime.Today;

        switch (period)
        {
            case "today":
                analyticsViewMode = "day";
                analyticsStartDate = today;
                analyticsEndDate = today.AddDays(1);
                break;
            case "week":
                analyticsViewMode = "week";
                var startOfWeek = today.AddDays(-(int)today.DayOfWeek + (int)DayOfWeek.Monday);
                if (today.DayOfWeek == DayOfWeek.Sunday) startOfWeek = startOfWeek.AddDays(-7);
                analyticsStartDate = startOfWeek;
                analyticsEndDate = startOfWeek.AddDays(7);
                break;
            case "month":
                analyticsViewMode = "month";
                analyticsStartDate = new DateTime(today.Year, today.Month, 1);
                analyticsEndDate = analyticsStartDate.AddMonths(1);
                break;
            case "year":
                analyticsViewMode = "year";
                analyticsStartDate = new DateTime(today.Year, 1, 1);
                analyticsEndDate = new DateTime(today.Year + 1, 1, 1);
                break;
        }

        await LoadAnalytics();
    }

    private async Task SetViewMode(string mode)
    {
        analyticsViewMode = mode;
        quickPeriod = ""; // Clear quick period selection

        var today = DateTime.Today;
        switch (mode)
        {
            case "day":
                analyticsStartDate = today;
                analyticsEndDate = today.AddDays(1);
                break;
            case "week":
                var startOfWeek = today.AddDays(-(int)today.DayOfWeek + (int)DayOfWeek.Monday);
                if (today.DayOfWeek == DayOfWeek.Sunday) startOfWeek = startOfWeek.AddDays(-7);
                analyticsStartDate = startOfWeek;
                analyticsEndDate = startOfWeek.AddDays(7);
                break;
            case "month":
                analyticsStartDate = new DateTime(today.Year, today.Month, 1);
                analyticsEndDate = analyticsStartDate.AddMonths(1);
                break;
            case "year":
                analyticsStartDate = new DateTime(today.Year, 1, 1);
                analyticsEndDate = new DateTime(today.Year + 1, 1, 1);
                break;
        }

        await LoadAnalytics();
    }

    private async Task PreviousPeriod()
    {
        quickPeriod = "";
        switch (analyticsViewMode)
        {
            case "day":
                analyticsStartDate = analyticsStartDate.AddDays(-1);
                analyticsEndDate = analyticsEndDate.AddDays(-1);
                break;
            case "week":
                analyticsStartDate = analyticsStartDate.AddDays(-7);
                analyticsEndDate = analyticsEndDate.AddDays(-7);
                break;
            case "month":
                analyticsStartDate = analyticsStartDate.AddMonths(-1);
                analyticsEndDate = analyticsEndDate.AddMonths(-1);
                break;
            case "year":
                analyticsStartDate = analyticsStartDate.AddYears(-1);
                analyticsEndDate = analyticsEndDate.AddYears(-1);
                break;
        }
        await LoadAnalytics();
    }

    private async Task NextPeriod()
    {
        quickPeriod = "";
        switch (analyticsViewMode)
        {
            case "day":
                analyticsStartDate = analyticsStartDate.AddDays(1);
                analyticsEndDate = analyticsEndDate.AddDays(1);
                break;
            case "week":
                analyticsStartDate = analyticsStartDate.AddDays(7);
                analyticsEndDate = analyticsEndDate.AddDays(7);
                break;
            case "month":
                analyticsStartDate = analyticsStartDate.AddMonths(1);
                analyticsEndDate = analyticsEndDate.AddMonths(1);
                break;
            case "year":
                analyticsStartDate = analyticsStartDate.AddYears(1);
                analyticsEndDate = analyticsEndDate.AddYears(1);
                break;
        }
        await LoadAnalytics();
    }

