@using CampusEats.Client.Models
@using CampusEats.Client.Services
@inject MenuService MenuService

@if (isVisible)
{
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4 animate-fade-in" @onclick="CloseDialog">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full animate-scale-in" @onclick:stopPropagation="true">
            <div class="p-6">
                <div class="flex items-start gap-4 mb-6">
                    <div class="flex-shrink-0 w-16 h-16 bg-red-50 border-2 border-red-200 rounded-full flex items-center justify-center">
                        <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-bold text-gray-900 mb-1">Confirm Deletion</h3>
                        <p class="text-sm text-gray-500 font-medium">This action cannot be undone</p>
                    </div>
                </div>

                @if (errorMessage != null)
                {
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl mb-5 shadow-sm">
                        <span class="text-sm font-medium">@errorMessage</span>
                    </div>
                }

                <div class="bg-gray-50/80 border border-gray-200 rounded-xl p-5 mb-6">
                    <p class="text-gray-600 text-sm font-medium mb-2">
                        Are you sure you want to delete
                    </p>
                    <p class="text-oxford-blue font-bold text-xl">
                        "@itemName"?
                    </p>
                </div>

                <div class="flex justify-end gap-3">
                    <button type="button" class="px-6 py-2.5 border border-gray-300 bg-white text-gray-700 rounded-lg font-semibold hover:bg-gray-50 hover:border-gray-400 transition-all shadow-sm"
                            @onclick="CloseDialog"
                            disabled="@isDeleting">
                        Cancel
                    </button>
                    <button type="button" class="px-6 py-2.5 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg font-semibold hover:shadow-lg hover:from-red-700 hover:to-red-800 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                            @onclick="ConfirmDelete"
                            disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="flex items-center gap-2">
                                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Deleting...</span>
                            </span>
                        }
                        else
                        {
                            <span>Delete</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnDeleted { get; set; }

    private bool isVisible = false;
    private bool isDeleting = false;
    private string? errorMessage;
    private MenuItemResponse? itemToDelete;
    private string itemName = "";

    public void Open(MenuItemResponse item)
    {
        itemToDelete = item;
        itemName = item.Name;
        errorMessage = null;
        isVisible = true;
        StateHasChanged();
    }

    private void CloseDialog()
    {
        isVisible = false;
        errorMessage = null;
        StateHasChanged();
    }

    private async Task ConfirmDelete()
    {
        if (itemToDelete == null) return;

        try
        {
            isDeleting = true;
            errorMessage = null;

            await MenuService.DeleteMenuItemAsync(itemToDelete.MenuItemId);

            await OnDeleted.InvokeAsync();
            CloseDialog();
        }
        catch (ApiException ex)
        {
            errorMessage = GetUserFriendlyMessage(ex);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete item: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

    private string GetUserFriendlyMessage(ApiException ex)
    {
        // Return the API message directly for conflict/operation errors - it's already user-friendly
        if (ex.IsConflict || ex.IsInvalidOperation)
            return ex.Message;

        if (ex.IsForbidden)
            return "You don't have permission to delete this item.";

        if (ex.IsUnauthorized)
            return "Please log in to perform this action.";

        if (ex.IsNotFound)
            return "This item no longer exists.";

        return ex.Message;
    }
}
