@using CampusEats.Client.Models

<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <!-- Peak Hour -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-orange-100 rounded-lg">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Peak Hour</span>
        </div>
        @if (Performance.PeakHour != null)
        {
            <p class="text-2xl font-bold text-slate-800">@FormatHour(Performance.PeakHour.Hour)</p>
            <p class="text-sm text-slate-500 mt-1">@Performance.PeakHour.OrderCount orders</p>
        }
        else
        {
            <p class="text-lg text-slate-400">No data</p>
        }
    </div>

    <!-- Best Day -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-indigo-100 rounded-lg">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Best Day</span>
        </div>
        @if (Performance.BestDayOfWeek != null)
        {
            <p class="text-2xl font-bold text-slate-800">@Performance.BestDayOfWeek.DayName</p>
            <p class="text-sm text-slate-500 mt-1">Avg @Performance.BestDayOfWeek.AvgOrders.ToString("F0") orders</p>
        }
        else
        {
            <p class="text-lg text-slate-400">No data</p>
        }
    </div>

    <!-- Completion Rate -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-emerald-100 rounded-lg">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Completion Rate</span>
        </div>
        <p class="text-2xl font-bold text-slate-800">@Performance.CompletionRate.ToString("F1")%</p>
        <p class="text-sm text-slate-500 mt-1">@Performance.CompletedOrders completed, @Performance.CancelledOrders cancelled</p>
    </div>

    <!-- Items/Order -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-cyan-100 rounded-lg">
                <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Items/Order</span>
        </div>
        <p class="text-2xl font-bold text-slate-800">@Performance.AvgItemsPerOrder.ToString("F1")</p>
        <p class="text-sm text-slate-500 mt-1">avg basket size</p>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public PerformanceMetrics Performance { get; set; } = default!;

    private static string FormatHour(int hour)
    {
        var time = new DateTime(2000, 1, 1, hour, 0, 0, DateTimeKind.Unspecified);
        return time.ToString("h:mm tt");
    }
}