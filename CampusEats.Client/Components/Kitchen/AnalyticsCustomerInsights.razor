@using CampusEats.Client.Models

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <!-- Unique Customers -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-blue-100 rounded-lg">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Unique Customers</span>
        </div>
        <p class="text-3xl font-bold text-slate-800">@Customers.UniqueCustomers</p>
        <p class="text-sm text-slate-500 mt-1">in this period</p>
    </div>

    <!-- Orders/Customer -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-purple-100 rounded-lg">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">Orders/Customer</span>
        </div>
        <p class="text-3xl font-bold text-slate-800">@Customers.OrdersPerCustomer.ToString("F1")</p>
        <p class="text-sm text-slate-500 mt-1">average</p>
    </div>

    <!-- New vs Returning -->
    <div class="bg-white rounded-xl p-5 shadow-sm border border-slate-200">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 bg-teal-100 rounded-lg">
                <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </div>
            <span class="text-sm font-medium text-slate-500">New vs Returning</span>
        </div>
        <div class="space-y-2 mt-2">
            <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600">New</span>
                <span class="text-sm font-medium text-slate-800">@Customers.NewCustomers (@Customers.NewCustomerPercentage.ToString("F0")%)</span>
            </div>
            <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-teal-400 to-emerald-500 rounded-full" style="width: @Customers.NewCustomerPercentage%"></div>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600">Returning</span>
                <span class="text-sm font-medium text-slate-800">@Customers.ReturningCustomers (@((100 - Customers.NewCustomerPercentage).ToString("F0"))%)</span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public CustomerInsights Customers { get; set; } = default!;
}