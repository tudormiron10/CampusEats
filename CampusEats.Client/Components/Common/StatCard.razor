@* Generic stat card component with icon, value, and label *@

<div class="bg-white rounded-xl p-4 shadow-sm border border-slate-200">
    <div class="flex items-center gap-3">
        <div class="p-2 @IconBgClass rounded-lg">
            @IconContent
        </div>
        <div>
            <p class="text-2xl font-bold text-slate-800">@Value</p>
            <p class="text-xs text-slate-500 uppercase tracking-wide">@Label</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string IconBgClass { get; set; } = "bg-slate-100";
    [Parameter] public RenderFragment? IconContent { get; set; }
}